@model WebApplication1.Models.CollegeModel //namespace--is a collection of classes

@{
    ViewData["Title"] = "AddCollege";
}

<h1>AddCollege</h1>

<h4>CollegeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCollege" asp-controller="Student">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CollegeId" class="control-label">Id</label>
                <input asp-for="CollegeId" class="form-control" /> <!--asp-for is taghelper-->
                <span asp-validation-for="CollegeId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CollegeName" class="control-label"></label>
                <input asp-for="CollegeName" class="form-control" /> <!--asp-for is taghelper-->
                <span asp-validation-for="CollegeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="University" class="control-label"></label>
                <input asp-for="University" class="form-control" />
                <span asp-validation-for="University" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="College">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
